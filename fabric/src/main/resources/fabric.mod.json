{
  "schemaVersion": 1,
  "id": "libbamboo",
  "version": "${version}",

  "name": "libbamboo",
  "description": "Library for my client-side mods",
  "authors": [
    "Crendgrim"
  ],
  "contact": {
  },

  "license": "LGPL-3.0",
  "icon": "assets/libbamboo/icon.png",

  "environment": "client",
  "mixins": [
    "libbamboo-common.mixins.json",
    "libbamboo-fabric.mixins.json"
  ],

  "entrypoints": {
    "client": ["mod.crend.libbamboo.fabric.LibBambooMod"]
  },

  "depends": {
    "fabricloader": "*",
    "minecraft": "${supported_version_pattern}",
    "java": "*"
  },
  "suggests": {
    "yet_another_config_lib": "3.*"
  },
  "custom": {
    "modmenu": {
      "badges": ["library"]
    }
  }
}
